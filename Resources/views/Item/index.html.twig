{% extends 'DebrilFeedIoBundle::base.html.twig' %}

{% block body -%}
    <h1>Item list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Publishedat</th>
                <th>Createdat</th>
                <th>Modifiedat</th>
                <th>Id</th>
                <th>Title</th>
                <th>Link</th>
                <th>Lastmodified</th>
                <th>Publicid</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('item_show', { 'id': entity.id }) }}">{{ entity.publishedAt|date('Y-m-d H:i:s') }}</a></td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.modifiedAt %}{{ entity.modifiedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.link }}</td>
                <td>{% if entity.lastModified %}{{ entity.lastModified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.publicId }}</td>
                <td>{{ entity.description }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('item_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('item_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('item_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
