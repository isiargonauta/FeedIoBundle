{% extends '::base.html.twig' %}

{% block body -%}
<div class="top">
{% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="flash-notice">
        {{ flashMessage }}
    </div>
{% endfor %}
</div>
<div class="title">
    <h1>
        {% block title %}{% endblock %}
    </h1>
</div>
<div class="main">
    {% block main %} {% endblock %}
</div>

<div class="inner-navigation">    
    <span>
        <a href="{{ path('feed_index') }}">
            view feeds list
        </a>&nbsp;
    </span>
    <span>
        <a href="{{ path('feed_new') }}">
            Publish a new feed
        </a>&nbsp;
    </span>
    <span>
        <a href="{{ path('feed_add') }}">
            add a new feed to follow
        </a>&nbsp;
    </span>
</div>

<div class="help">
    {% block help %} {% endblock %}
</div>

{% endblock %}
